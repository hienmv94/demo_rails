<li id="entry-<%= entry.id %>">
  <%= link_to gravatar_for(entry.user, size: 50), entry.user %>
  <span class="user"><%= link_to entry.user.name, entry.user %></span>
  <span class="title"><%= entry.title %></span>
  <span class="content"><%= entry.content %></span>
   <span class="timestamp">
    Posted <%= time_ago_in_words(entry.created_at) %> ago.
    <% if current_user?(entry.user) %>
      <%= link_to "delete", entry, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>

  <!-- Comment -->
  <div class="comments" id="entry-comment-id-<%= entry.id %>">
  <% if logged_in? %>
    <% if current_user?(entry.user) || current_user.following?(entry.user) %>
      

      <%= form_for(Comment.new) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.hidden_field :entry_id, value: entry.id %>
          <%= f.text_area :content, placeholder: "Comment..."%>
        </div>
        <%= f.submit "Comment", class: "btn btn-primary" %>
      <% end %>

    <% end %>
  <% end %>  
    <div class="row" id="entry-comment-<%= entry.id %>">
      <%= render entry.comments %>
    </div>
  </div>
  </div>

</li>
