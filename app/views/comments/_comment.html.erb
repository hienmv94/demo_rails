<div class="row">
  <div class="col-md-1 col-md-offset-2"><%= link_to gravatar_for(comment.user, size: 50), comment.user %></div>
  <div class="col-md-2"><%= link_to comment.user.name %></div>
  <div class="col-md-5"><em>Commented <%= time_ago_in_words(comment.created_at) %> ago.</em></div>
  <div class="col-md-2 text-right">
    <% if current_user?(comment.user) %>
        <%= link_to '', comment_path(comment), :class => "glyphicon glyphicon-remove",
         method: :delete, remote: true, data: { confirm: "You sure?" } %>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-9 col-md-offset-3"><%= comment.content %></div>
</div>
